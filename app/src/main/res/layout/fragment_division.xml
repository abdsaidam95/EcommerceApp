<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewModel"
            type="com.example.ecommerceapp.feature.main.home.division.DivisionViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.main.home.division.DivisionFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_48sdp"
            android:background="@color/colorGray"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchView"
                android:layout_width="match_parent"
                app:layout_constraintTop_toTopOf="@id/view"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:layout_constraintBottom_toBottomOf="@id/view"
                app:layout_constraintCircleRadius="@dimen/_44sdp"
                android:background="@drawable/bg_searchview"
                app:searchHintIcon="@color/colorGray"
                app:layout_constraintStart_toStartOf="@id/view"
                app:layout_constraintEnd_toEndOf="@id/view"
                android:layout_height="@dimen/_36sdp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view"
            android:paddingStart="@dimen/_12sdp"
            android:paddingEnd="@dimen/_12sdp"
            app:marginDecoration="@{8}"
            android:layout_marginTop="@dimen/_14sdp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:FoodAdapter="@{viewModel.menuAdapter}"
            android:paddingBottom="@dimen/_12sdp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>